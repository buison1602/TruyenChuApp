<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình Kiểm tra"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/test_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email để test (dùng email mới)"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/test_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu (ví dụ: 123456)"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/test_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Đăng Ký Ngay"
        android:layout_marginTop="24dp"/>
</LinearLayout>