<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_background"
    tools:context=".activity.DonateActivity">

    <ImageView
        android:id="@+id/backToSignin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:src="@drawable/ic_back2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy admin a coffe"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cảm ơn sự giúp đỡ của bạn. Đội ngũ admin sẽ đưa ra thật nhiều truyện hay"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/green_border_background"
            android:padding="3dp">

            <ImageView
                android:id="@+id/qr_code_iv"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:contentDescription="QR Code for donation"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_avatar_placeholder" />

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="STK: 108875226441"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Ngân hàng: VietinBank"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- NÚT MỚI ĐƯỢC THÊM VÀO -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDownloadQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/primary_blue"
            android:paddingVertical="14dp"
            android:text="Tải mã QR xuống"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>