<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_anh_bia_recent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hero_background"
                android:contentDescription="@string/book_cover"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_ten_truyen_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuộc chiến giữa các vì sao"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_tac_gia_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tác giả: George Lucas"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- THÊM MỚI: TextView để hiển thị thể loại -->
            <TextView
                android:id="@+id/tv_the_loai_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại: Khoa học viễn tưởng"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_update_info_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật 2 giờ trước"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
